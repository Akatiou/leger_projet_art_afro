{% extends 'base.html.twig' %}

{% block title %}
	Modifier l'utilisateur
	{{ user.fullName }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/lux/bootstrap.min.css" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div class="container border shadow col-8">
		<h1 class="text-center">Modifier les informations de
			{{ user.fullName }}</h1>

		{{ form_start(form) }}
		{{ form_widget(form) }}

		<button class="btn btn-success row my-2 mx-2">{{ button_label|default('Sauvegarder') }}</button>

		{{ form_end(form) }}


		{{ include('admin/user/_delete_form.html.twig') }}

		<a class="btn btn-warning my-2 mx-2" href="{{ path('user_index') }}">Retour</a>
	</div>
{% endblock %}
