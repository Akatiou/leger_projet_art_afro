{% extends 'base.html.twig' %}

{% block title %}
	Fiche d'un utilisateur
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/lux/bootstrap.min.css" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">{{ user.fullName }}</h1>

		<table class="table container border shadow col-8">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Password</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th>FullName</th>
					<td>{{ user.fullName }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-center m-2">
			<a class="btn btn-warning my-2 mx-2" href="{{ path('user_index') }}">Retour</a>

			<a class="btn btn-success my-2 mx-2" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

			{{ include('admin/user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
