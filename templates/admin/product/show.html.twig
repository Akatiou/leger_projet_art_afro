{% extends 'base.html.twig' %}

{% block title %}
	Product
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/lux/bootstrap.min.css" crossorigin="anonymous">
{% endblock %}

{% block body %}
	<div class="continer">
		<h1 class="text-center">{{product.name}}</h1>

		<table class="table container border shadow col-8">
			<tbody>
				<tr>
					<th>Produit ajouté le</th>
					<td>{{ product.CreatedAt | date("d/m/Y") }}</td>
				</tr>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ product.name }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ product.price | amount }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product.shortDescription | raw }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>{{ product.MainPicture }}</td>
				</tr>
				<tr>
					<th>Quantité</th>
					<td>{{ product | length }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-center m-2">
			<a class="btn btn-warning my-2 mx-2" href="{{ path('product_index') }}">Retour</a>

			<a class="btn btn-info my-2 mx-2" href="{{ path('product_edit', {'id': product.id}) }}">Modifier</a>

			{{ include('admin/product/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
